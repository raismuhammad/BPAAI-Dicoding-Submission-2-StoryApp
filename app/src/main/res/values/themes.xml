<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoryApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <item name="colorPrimary">@color/moonstone</item>
        <item name="colorPrimaryDark">@color/blueCNS</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/lapisLazuli</item>

        <item name="colorSecondary">@color/hookersGreen</item>
        <item name="colorSecondaryVariant">@color/keppel</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.StoryApp" parent="Base.Theme.StoryApp" />
    
    <style name="Theme.AppBar" parent="Widget.Material3.AppBarLayout">
        <item name="colorPrimary">@color/moonstone</item>
        <item name="colorSurface">@color/blueCNS</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>

        <item name="titleTextColor">@color/white</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="EditText">
        <item name="boxBackgroundColor">@color/white_1</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>